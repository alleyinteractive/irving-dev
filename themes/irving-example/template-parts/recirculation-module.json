{
	"name": "irving/post-list",
	"config": {
		"query_args": {
			"post_type": "post",
			"posts_per_page": 4
		},
		"templates": {
			"before": [

				{
					"name": "irving/text",
					"theme": "h3",
					"config": {
						"content": "Related Posts",
						"tag": "h3"
					}
				}
			],
			"wrapper": [
				{
					"name": "material/grid",
					"config": {
						"container": true,
						"spacing": 2,
						"style": {
							"margin_bottom": "2rem"
						}
					}
				}
			],
			"item": [
				{ "name": "template-parts/post-card-small" }
			],
			"after": [
				{
					"name": "irving/container",
					"config": {
						"style": {
							"margin_bottom": "2rem"
						}
					}
				}
			]
		}
	}
}