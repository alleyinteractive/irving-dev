{
	"page": [
		{
			"name": "irving/body-wrapper",
			"children": [
				{
					"name": "irving/container",
					"config": {
						"max_width": "lg"
					},
					"children": [
						{
							"name": "irving/post-list",
							"config": {
								"templates": {
									"before": [
										{
											"name": "irving/query-search-results-found",
											"config": {
												"content_format": "%2$s results for: \"%1$s\"",
												"tag": "h2",
												"style": {
													"font-size": "2rem",
													"margin-bottom": ".5rem"
												}
											}
										},
										{
											"name": "irving/query-search-results-found",
											"config": {
												"content_format": "Page %3$s of %4$s",
												"tag": "p",
												"style": {
													"font-size": "1rem",
													"margin-bottom": "1rem"
												}
											}
										},
										{
											"name": "irving/query-search-form",
											"config": {
												"base_url": "/search/",
												"style": {
													"margin-bottom": "1rem"
												}
											}
										}
									],
									"wrapper": [
										{
											"name": "material/grid",
											"config": {
												"container": true,
												"spacing": 2,
												"style": {
													"margin-bottom": "2rem"
												}
											}
										}
									],
									"no_results": [
										{
											"name": "irving/query-search-results-found",
											"theme": "h2",
											"config": {
												"content_format": "No results for \"%1$s\"",
												"tag": "h2",
												"style": {
													"margin-bottom": "1rem"
												}
											}
										},
										{
											"name": "irving/query-search-form",
											"config": {
												"base_url": "/search/",
												"style": {
													"margin-bottom": "1rem"
												}
											}
										}
									],
									"item": [
										{ "name": "template-parts/post-card-small" }
									],
									"after": [
										{
											"name": "irving/query-pagination",
											"config": {
												"base_url": "/search/",
												"style": {
													"margin-bottom": "1rem"
												}
											}
										}
									]
								}
							}
						}
					]
				}
			]
		}
	]
}