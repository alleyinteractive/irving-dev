<?xml version="1.0"?>
<ruleset name="Irving Dev">
	<description>PHP_CodeSniffer standard for Irving Dev.</description>

	<!-- Include Alley Rules -->
	<rule ref="alley-coding-standards" />

	<!--
	Pass some flags to PHPCS:
	 p flag: Show progress of the run.
	 s flag: Show sniff codes in all reports.
	 v flag: Print verbose output.
	 n flag: Do not print warnings (shortcut for `warning-severity=0`).
	-->
	<arg value="psv" />

	<!-- Only check the PHP files. -->
	<arg name="extensions" value="php" />

	<!-- Exclude a few directories and autogenerated files. -->
	<exclude-pattern>*/tests/</exclude-pattern>
	<exclude-pattern>*/inc/fields.php</exclude-pattern>
	<exclude-pattern>*/inc/cli.php</exclude-pattern>

	<rule ref="WordPress.NamingConventions.PrefixAllGlobals">
		<properties>
			<property name="prefixes" type="array" value="Irving_Dev,Irving_Example,WP_Irving,ai_,_ai" />
		</properties>
	</rule>

</ruleset>
